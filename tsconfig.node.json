{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/common/**/*.ts",
    "tests/**/*.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
  "types": ["electron-vite/node", "vitest"],
    "paths": {
      "@common/*": [
        "./src/common/*"
      ],
      "@main/*": [
        "./src/main/*"
      ],
      "@renderer/*": [
        "./src/renderer/src/*"
      ]
    }
  }
}
